{
	"name": "vscode-better-sml",
	"displayName": "vscode-better-sml",
	"description": "Standard ML Support for Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:sml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"grammars": [
			{
				"language": "sml",
				"scopeName": "source.sml",
				"path": "./syntaxes/sml.json"
			}
		],
		"languages": [
			{
				"id": "sml",
				"aliases": [
					"Standard ML"
				],
				"extensions": [
					".sml",
					".sig",
					".fun"
				],
				"configuration": "./sml.configuration.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	},
	"dependencies": {
		"web-tree-sitter": "^0.15.6"
	}
}